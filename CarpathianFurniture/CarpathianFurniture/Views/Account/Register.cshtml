@model CarpathianFurniture.ViewModels.RegisterViewModel

<h2>Registration</h2>

<a asp-action="Login" asp-controller="Account">Login</a>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Email:</label><br />
            <input type="text" asp-for="Email" placeholder="Enter Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Password:</label><br />
            <input asp-for="Password" placeholder="Enter Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Repeat Password</label><br />
            <input asp-for="ConfirmPassword" placeholder="Enter Password" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <label asp-for="Name">Name</label><br />
            <input asp-for="Name" placeholder="Enter your Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Surname">Surname</label><br />
            <input asp-for="Surname" placeholder="Enter your Surname" />
            <span asp-validation-for="Surname" />
        </div>
        <div>
            <label asp-for="Address">Address</label><br />
            <input asp-for="Address" placeholder="Enter your Address" />
            <span asp-validation-for="Address" />
        </div>
        <div>
            <br />
            <input type="submit" value="Register" />
        </div>
    </div>
</form>