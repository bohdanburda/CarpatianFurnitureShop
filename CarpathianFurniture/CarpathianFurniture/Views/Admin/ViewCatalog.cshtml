
<h4>Return to admin panel</h4>

<form asp-action="Index" asp-controller="Admin">
    <div class="form-group">
        <input type="submit" value="Return" class="btn btn-outline-dark" />
    </div>
</form>




<h2>View furniture catalog</h2>

<meta name="viewport" content="width =device-width" />
<style>

    img {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
        width: 350px;
        height: 200px;
    }

        img:hover {
            box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
        }
</style>

<div class="row mt-5 md-2" method="post" enctype="multipart/form-data">
    @{ foreach (var furniture in Model.AllFurniture)
        {

            <div class="col-lg-4">
                <a target="_blank" href="@furniture.ImagePath">
                    <img src="@furniture.ImagePath" alt="@furniture.Title" />
                </a>
                <h2>Model: @furniture.Title</h2>
                <p>Description: @furniture.Description</p>
                <p>Price: @furniture.Price.ToString("c")</p>

                <!--<p><input type="submit" value="Add to basket" class="btn btn-warning " href="#" /></p>-->
                <a asp-controller="Admin" asp-action="DeleteItem"
                   asp-route-item=@furniture.FurnitureId class="btn btn-warning">Delete</a>
                <p style="padding-top:5px"></p>

            </div>
        }

    }
</div>