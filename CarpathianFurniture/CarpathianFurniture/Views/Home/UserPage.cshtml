@model CarpathianFurniture.Models.User

@{
    ViewData["Title"] = "User";
}

<div class="text-center">
    <h1 class="display-4">@User.Identity.Name</h1>
</div>



<table class="table">
    
    <tbody>
        <tr>
            <td>
                Name
            </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td>
                Surname
            </td>
            <td>
                @Model.Surname
            </td>
        </tr>
        <tr>
            <td>
                Address
            </td>
            <td>
                @Model.Address
            </td>
        </tr>

    </tbody>

</table>





<h2>User cabinet</h2>


<form asp-action="change" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Address</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Change" class="btn btn-outline-dark" />
    </div>
</form>